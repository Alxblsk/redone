{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "gatsby-plugin-typescript"
      }
    ]
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.js",
    "./gatsby-config.js",
    "./gatsby-browser.js",
    "./gatsby-ssr.js"
  ],
  "exclude": [
    "node_modules",
    ".cache",
    "public"
  ]
} 